{
  "name": "smelt",
  "displayName": "smelt - Modern data transformation framework",
  "description": "Language support for smelt data pipeline models",
  "version": "0.1.0",
  "publisher": "smelt",
  "repository": {
    "type": "git",
    "url": "https://github.com/adbrowne/smelt-sql"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "sql",
    "data",
    "pipeline",
    "analytics",
    "dbt"
  ],
  "activationEvents": [
    "workspaceContains:**/models/*.sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "smelt",
        "aliases": [
          "smelt",
          "Smelt"
        ],
        "extensions": [
          ".sql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smelt",
        "scopeName": "source.sql.smelt",
        "path": "./syntaxes/smelt.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "smelt",
      "properties": {
        "smelt.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the smelt language server."
        },
        "smelt.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the smelt-lsp server binary. If empty, will use 'cargo run -p smelt-lsp'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
